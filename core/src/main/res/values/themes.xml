<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextItem.ItemColor">
        <item name="android:textColor">@color/color_on_secondary</item>
    </style>

    <style name="TextItem.OtherItemColor">
        <item name="android:textColor">@color/color_secondary_variant</item>
    </style>

    <style name="TextItem.ItemColor.Field">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextItem.OtherItemColor.Field">
        <item name="drawableStartCompat">@drawable/ic_star</item>
        <item name="drawableTint">?attr/colorSecondary</item>
    </style>
</resources>