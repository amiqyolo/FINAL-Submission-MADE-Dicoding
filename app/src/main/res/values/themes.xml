<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieAplen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/color_background</item>
    </style>

    <style name="NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/color_primary</item>
        <item name="itemRippleColor">@color/color_secondary</item>
        <item name="itemTextColor">@color/color_on_primary</item>
    </style>

    <style name="Theme.MovieAplen.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MovieAplen.Toolbar">
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/color_primary</item>
        <item name="titleTextColor">@color/color_on_primary</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="Theme.MovieAplen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MovieAplen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextItem.ItemColor">
        <item name="android:textColor">@color/color_on_surface</item>
    </style>

    <style name="TextItem.OtherItemColor">
        <item name="android:textColor">@color/color_secondary_variant</item>
    </style>

    <style name="TextItem.ItemColor.Field">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextItem.OtherItemColor.Field">
        <item name="drawableStartCompat">@drawable/ic_star</item>
        <item name="drawableTint">?attr/colorSecondary</item>
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.ItemColor">
        <item name="android:textColor">@color/color_on_surface</item>
    </style>

    <style name="TextContent.ItemColor.Field">
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>